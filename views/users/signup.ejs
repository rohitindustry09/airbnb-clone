<% layout("/layouts/boilerplate") %>

<div class="row do-fade">
  <div class="col-8 offset-2">
    <h3> Signup on WonderLust </h3>
    <form method="POST" action="/signup" novalidate class="needs-validation">
     
<div class="mt-3 mb-3">
 <label for="email" class="form-label">Username</label>
      <input type="text" placeholder="Enter a username " class="form-control" name="username" required/>
  
  <div class="valid-feedback"> This looks good. </div>
  <div class="invalid-feedback"> Title should be needed. </div>
</div> 

<div class="mt-3 mb-3">
 <label for="email" class="form-label">Email</label>
      <input type="email" placeholder="Enter a email " class="form-control" name="email" required/>
</div> 

<div class="mt-3 mb-3">
 <label for="password" class="form-label">Password</label>
      <input type="password" placeholder="set a password " class="form-control" name="password" required/>
</div> 


  <button class="mt-3 btn btn-dark add-btn">SignUp</button>
   </form>
   <hr>
   <div class="new-user">
     <h3> already have an account?<a href="/login">login</a></h3>
   </div>
</div>
</div>
