  <div class="col-6 place-details-class card card-plate">
   <div class="ms-4 details-class card-body">
      
      <h2 class="detail card-text"><b>| <%=listing.title%></b></h2>
      <div class="detail image"> 
         <img class="image-view" src="<%=listing.image.url%>"/>
      </div>
      <div class="detail description"> <%=listing.description%> </div>
      <div class="detail country"> <%=listing.country%> </div>
    
  <div>
