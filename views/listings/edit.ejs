<% layout("layouts/boilerplate") %>

<div class="do-fade">
<div class="row">
  <div class="col-8 offset-2">
    <h3> Edit your Listing </h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
     
<div class="mt-3 mb-3">
 <label for="title" class="form-label">Title</label>
      <input type="text" placeholder="enter title" class="form-control" value="<%=listing.title%>" name="listing[title]" required/>
  
  <div class="valid-feedback"> This looks good. </div>
  <div class="invalid-feedback"> Title should be needed. </div>
</div> 

<div class="mb-3 mt-3">
  <label for="description" class="form-label">Description</label>
    <textarea placeholder="enter description" class="form-control" name="listing[description]" required><%=listing.description%></textarea>
 <div class="invalid-feedback"> Description should be needed. </div>
</div>

<div class="mb-3 mt-3">
  <h4> Original image </h4>
  <img src="<%=originalImage%>" style="height: 15vw; width: 25vw; border-radius: 20px;"/>
</div> 
<div class="mb-3 mt-3">
  <label for="image" class="form-label">Image</label>
     <input type="file" class="form-control" name="listing[image]"/>
</div> 

<div class="row">
<div class="mb-3 col-md-4 mt-3">
  <label for="price" class="form-label">Price</label>
      <input type="number" value="<%=listing.price%>" class="form-control" name="listing[price]" required/>
  <div class="invalid-feedback"> Price should be needed. </div>
</div>
<div class="mb-3 col-md-8 mt-3">
  <label for="country" class="form-label">Country</label>
      <input type="text" value="<%=listing.country%>" class="form-control" name="listing[country]" required/>
  <div class="invalid-feedback"> Country name should be needed. </div>
</div>

</div>

<div class="mb-3 mt-3">
  <label for="location" class="form-label">location</label>
      <input type="text" value="<%=listing.location%>" class="form-control" name="listing[location]" required/>
  <div class="invalid-feedback"> location should be needed. </div>
</div> 
           <button class="btn btn-dark mt-3 edit-btn"> Edit </button>
    </form>
 </div>
</div>
</div>
