<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3> Create new Listing </h3>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
     
<div class="">
 <label for="title" class="form-label">Title</label>
      <input type="text" placeholder="enter title" class="form-control" name="listing[title]" required/>
</div> <br/><br/>
<div class="mb-3">
  <label for="description" class="form-label">Description</label>
      <textarea placeholder="enter description" class="form-control" name="listing[description]" required></textarea>
  <div class="invalid-feedback"> Description should be needed. </div>
</div> <br/><br/>

<div class="mb-3">
  <label for="image" class="form-label">Image</label>
      <input type="file" class="form-control" name="listing[image]">
</div> <br/><br/>

<div class="row">
<div class="mb-3 col-md-4">
  <label for="price" class="form-label">Price</label>
      <input type="text" placeholder="12000" class="form-control" name="listing[price]" required/>
    <div class="invalid-feedback"> Price should be added. </div>
      <br/><br/>
</div>
<div class="mb-3 col-md-8">
  <label for="country" class="form-label">Country</label>
      <input type="text" placeholder="enter country" class="form-control" name="listing[country]" required/>
   <div class="invalid-feedback"> Country name should be needed. </div>
      <br/><br/>
</div>

</div>
<div class="row">
<div class="mb-3">
  <label for="location" class="form-label">location</label>
      <input type="text" placeholder="enter location" class="form-control" name="listing[location]" required/>
     <div class="invalid-feedback"> Location should be needed. </div>
</div>
<div class="row">
<select name="listing[category]" class="form-select form-select-sm" aria-label="Small select example">
  <option selected value="Rooms">Select category</option>
  <option value="Trending">Trending</option>
  <option value="Rooms">Rooms</option>
  <option value="Iconic cities">Iconic cities</option>
  <option value="Mountains">Mountains</option>
  <option value="Castles">Castles</option>
  <option value="Amazing pools">Amazing pools</option>
  <option value="Camping">Camping</option>
  <option value="Farms">Farms</option>
  <option value="Arctic">Arctic</option>
  <option value="Domes">Domes</option>
  <option value="Boats">Boats</option>
</select>
</div>
</div><br/><br/>
           <button class="btn btn-dark add-btn"> Add </button>
    </form>
 </div>
</div>
